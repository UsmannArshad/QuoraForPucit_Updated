@model QuoraForPucit.Models.User
@{ 
    ViewData["Title"] = "Sign Up";
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="icon" href="~/images/icon.png">
    <link rel="stylesheet" href="./fontawesome-free-5.15.3-web/css/all.css">
    <link rel="stylesheet" href="./bootstrap-5.1.3-dist/css/bootstrap.css">
    <title>Sign Up</title>
    <link rel="stylesheet" href="@Url.Content("~/css/Style.css")">
</head>
<body>
    <div asp-validation-summary="All" role="alert" style="display:none">
    </div>
    <div class="row">
        <div class="col-lg-5 m-auto">
            <div class="card mt-5 bg-light">
                <div class="card-title text-center mt-3">
                    <img src="~/images/login.png" width="150" height="150" alt="">
                </div>
                <div class="card-title text-center mt-3">
                    <img src="~/images/Quora-for-Marketing.png" width="150" heihgt="150px" alt="">
                    <h5 class="mt-3">A Place to share knowledge and better understand the World</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="SignUp">
                        <div class="form-group mb-3">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control mt-2">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Age">Age</label>
                            <input asp-for="Age" class="form-control mt-2">
                            <span asp-validation-for="Age" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Email address</label>
                            <input asp-for="Username" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" aria-describedby="emailHelp">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlFile1">Choose Profile Pic</label>
                            <br>
                            <input type="file" class="form-control-file mt-3" accept="image/*" id="exampleFormControlFile1">
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary  mt-3 px-5">Sign Up</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">Already have an Account?<a asp-controller="User" asp-action="SignIn" class="text-decoration-none px-2"><b>Sign In</b></a></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>